<form method ="post" action="/pizza_orders/<%= @order.id %>/edit">

  <label for="first-name">First Name:</label>
  <input type="text" name="first_name" id="first-name" value="<%= @order.first_name  %>">

  <label for="last-name">Last Name:</label>
  <input type="text" name="last_name" id="last_name" value="<%= @order.last_name  %>">

  <label for="pizza-select">Select a pizza</label>
  <select id="pizza-select" name= "topping">

    <option value="<%= @order.topping %>"><%= @order.topping %></option>
    <option value="Margherita">Margherita</option>
    <option value="Calzone">Calzone</option>

  </select>

  <label for="Quantity">Quantity</label>
  <input type="number" name="quantity" id="quantity" value="<%= @order.quantity  %>">

  <input type="submit" value="Update Order">


</form>
